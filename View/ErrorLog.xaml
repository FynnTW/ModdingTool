<Window
    Height="450"
    Title="Error Log"
    Width="800"
    d:DataContext="{d:DesignInstance local:ErrorLog}"
    mc:Ignorable="d"
    x:Class="ModdingTool.View.ErrorLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModdingTool.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ModdingToolStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBox">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TextBox
            Background="{StaticResource BackgroundBrush}"
            FontFamily="Nirmala UI"
            FontSize="18"
            Foreground="Azure"
            SelectionBrush="{StaticResource HighlightBrush}"
            x:Name="ErrorLogBox" />
    </Grid>
</Window>
