                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.PriAmmunition}"
                        x:Name="PriAmmunition" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding TechTypes}"
                        SelectedItem="{Binding SelectedUnit.PriTechType}"
                        x:Name="PriTechType" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding SoundTypes}"
                        SelectedItem="{Binding SelectedUnit.PriSoundType}"
                        x:Name="PriSoundType" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.PriFireType}"
                        x:Name="PriFireType" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriCharge]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriRange]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriWeaponType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriDamageType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriAttDelay]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriSkelFactor]}" />
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.PriCharge}"
                        x:Name="PriCharge" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.PriRange}"
                        x:Name="PriRange" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding WeaponTypes}"
                        SelectedItem="{Binding SelectedUnit.PriWeaponType}"
                        x:Name="PriWeaponType" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding DamageTypes}"
                        SelectedItem="{Binding SelectedUnit.PriDamageType}"
                        x:Name="PriDamageType" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.PriAttDelay}"
                        x:Name="PriAttDelay" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.PriSkelFactor}"
                        x:Name="PriSkelFactor" />
                </StackPanel>
                <sdl:MultiSelectComboBox
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Height="25"
                    ItemsSource="{Binding AttackAttr}"
                    SelectedItems="{Binding SelectedUnit.PriAttr}"
                    SelectionMode="Multiple"
                    VerticalAlignment="Bottom"
                    x:Name="PriAttr" />
            </Grid>

            <Grid Grid.Column="0" Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="75*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2">
                    <TextBlock Height="25" x:Name="Soldiera">
                        <Hyperlink Click="SoldierGotoHyper_OnClick">
                            Soldier
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Height="25" x:Name="Officer1A">
                        <Hyperlink Click="SoldierGotoHyper_OnClick">
                            Officer
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Height="25" x:Name="Officer2A">
                        <Hyperlink Click="SoldierGotoHyper_OnClick">
                            Officer
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Height="25" x:Name="Officer3A">
                        <Hyperlink Click="SoldierGotoHyper_OnClick">
                            Officer
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MaxWidth="135" Width="25*" />
                            <ColumnDefinition Width="25*" />
                            <ColumnDefinition MaxWidth="50" Width="15*" />
                            <ColumnDefinition MaxWidth="60" Width="25*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25*" />
                            <RowDefinition Height="25*" />
                            <RowDefinition Height="25*" />
                            <RowDefinition Height="25*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Height="25"
                            x:Name="ArmourModelBaseA">
                            <Hyperlink Click="SoldierGotoHyper_OnClick">
                                Base Model
                                <Hyperlink.Style>
                                    <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                        <Setter Property="Foreground" Value="#000" />
                                    </Style>
                                </Hyperlink.Style>
                            </Hyperlink>
                        </TextBlock>
                        <ComboBox
                            Grid.Column="1"
                            Grid.Row="0"
                            Height="25"
                            IsEditable="True"
                            ItemsSource="{Binding ModelEntries}"
                            SelectedItem="{Binding SelectedUnit.ArmourModelBase}"
                            x:Name="ArmourModelBase" />
                        <TextBlock
                            Grid.Column="2"
                            Grid.Row="0"
                            Height="25"
                            Margin="5,0,0,0"
