                        <TextBox
                            Grid.Column="3"
                            Grid.Row="0"
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Margin="5,0,0,0"
                            Text="{Binding SelectedUnit.ArmourlvlBase}"
