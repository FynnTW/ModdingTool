<UserControl
    d:DataContext="{d:DesignInstance mvvm:UnitTab}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ModdingTool.View.UserControls.UnitTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="clr-namespace:ModdingTool.View.InterfaceData"
    xmlns:sdl="http://schemas.sdl.com/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">



    <ScrollViewer>
        <Grid>
            <Grid.Background>
                <ImageBrush
                    AlignmentX="Center"
                    AlignmentY="Top"
                    ImageSource="pack://application:,,,/Images/blank_parchment.jpg" />
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="40*" />
                <RowDefinition Height="20*" />
                <RowDefinition Height="35*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <Grid ColumnSpan="2" Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="75*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Height="25" Text="{Binding UnitUiText[LocalizedName]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[Type]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[Dictionary]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[Category]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[ClassType]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[VoiceType]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[Accent]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[BannerFaction]}" />
                        <TextBlock Height="25" Text="{Binding UnitUiText[BannerHoly]}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.LocalizedName}"
                            x:Name="Name" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Type}"
                            x:Name="Type" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Dictionary}"
                            x:Name="Dictionary" />
                        <ComboBox
                            Height="25"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedUnit.Category}"
                            x:Name="Category" />
                        <ComboBox
                            Height="25"
                            ItemsSource="{Binding Classes}"
                            SelectedItem="{Binding SelectedUnit.ClassType}"
                            x:Name="ClassType" />
                        <ComboBox
                            Height="25"
                            ItemsSource="{Binding VoiceTypes}"
                            SelectedItem="{Binding SelectedUnit.VoiceType}"
                            x:Name="VoiceType" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Accent}"
                            x:Name="Accent" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.BannerFaction}"
                            x:Name="BannerFaction" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.BannerHoly}"
                            x:Name="BannerHoly" />
                    </StackPanel>
                </Grid>
                <Grid
                    ColumnSpan="2"
                    Grid.Column="0"
                    Row="1"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[Ship]}"
                            VerticalAlignment="Top" />
                        <TextBlock Height="25" VerticalAlignment="Top">
                            <Hyperlink Click="MountGoto_OnClick">
                                Mount
                                <Hyperlink.Style>
                                    <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                        <Setter Property="Foreground" Value="#000" />
                                    </Style>
                                </Hyperlink.Style>
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[StatFireDelay]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[Mass]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[Radius]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[HitPoints]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[SoldierCount]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[StatStl]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="EDU Index"
                            VerticalAlignment="Top" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Ship}"
                            VerticalAlignment="Top"
                            x:Name="Ship" />
                        <ComboBox
                            Height="25"
                            IsEditable="True"
                            ItemsSource="{Binding MountEntries}"
                            SelectedItem="{Binding SelectedUnit.Mount}"
                            x:Name="Mount" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.StatFireDelay}"
                            VerticalAlignment="Top"
                            x:Name="StatFireDelay" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Mass}"
                            VerticalAlignment="Top"
                            x:Name="Mass" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Radius}"
                            VerticalAlignment="Top"
                            x:Name="Radius" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.HitPoints}"
                            VerticalAlignment="Top"
                            x:Name="HitPoints" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.SoldierCount}"
                            VerticalAlignment="Top"
                            x:Name="SoldierCount" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.StatStl}"
                            VerticalAlignment="Top"
                            x:Name="StatStl" />
                        <TextBox
                            Background="DarkGray"
                            Height="25"
                            HorizontalAlignment="Stretch"
                            IsReadOnly="True"
                            Text="{Binding SelectedUnit.EduIndex}"
                            VerticalAlignment="Top"
                            x:Name="EduIndex" />
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[Engine]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[Animal]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[StatChargeDist]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[MoveSpeed]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[Height]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[MountHitPoints]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[ExtrasCount]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[MountedEngine]}"
                            VerticalAlignment="Top" />
                        <TextBlock
                            Height="25"
                            Text="{Binding UnitUiText[AiUnitValue]}"
                            VerticalAlignment="Top" />
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Engine}"
                            VerticalAlignment="Top"
                            x:Name="Engine" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Animal}"
                            VerticalAlignment="Top"
                            x:Name="Animal" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.StatChargeDist}"
                            VerticalAlignment="Top"
                            x:Name="StatChargeDist" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.MoveSpeed}"
                            VerticalAlignment="Top"
                            x:Name="MoveSpeed" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.Height}"
                            VerticalAlignment="Top"
                            x:Name="Height" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.MountHitPoints}"
                            VerticalAlignment="Top"
                            x:Name="MountHitPoints" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.ExtrasCount}"
                            VerticalAlignment="Top"
                            x:Name="ExtrasCount" />
                        <TextBox
                            Height="25"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SelectedUnit.MountedEngine}"
                            VerticalAlignment="Top"
                            x:Name="MountedEngine" />
                        <TextBox
                            Background="DarkGray"
                            Height="25"
                            HorizontalAlignment="Stretch"
                            IsReadOnly="True"
                            Text="{Binding SelectedUnit.AiUnitValue}"
                            VerticalAlignment="Top"
                            x:Name="UnitValue" />
                    </StackPanel>
                </Grid>
            </Grid>


            <Grid
                Column="1"
                Margin="5"
                Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                <Border
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.ColumnSpan="4"
                    Margin="-5" />
                <StackPanel Grid.Column="0">
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecAttack]}" />
                    <TextBlock Height="25">
                        <Hyperlink Click="Projectile2Goto_OnClick">
                            Sec Projectile
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecAmmunition]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecTechType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecSoundType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecFireType]}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecAttack}"
                        x:Name="SecAttack" />
                    <ComboBox
                        Height="25"
                        IsEditable="True"
                        ItemsSource="{Binding ProjectileEntries}"
                        SelectedItem="{Binding SelectedUnit.SecProjectile}"
                        x:Name="SecProjectile" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecAmmunition}"
                        x:Name="SecAmmunition" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding TechTypes}"
                        SelectedItem="{Binding SelectedUnit.SecTechType}"
                        x:Name="SecTechType" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding SoundTypes}"
                        SelectedItem="{Binding SelectedUnit.SecSoundType}"
                        x:Name="SecSoundType" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecFireType}"
                        x:Name="SecFireType" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecCharge]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecRange]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecWeaponType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecDamageType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecAttDelay]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[SecSkelFactor]}" />
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecCharge}"
                        x:Name="SecCharge" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecRange}"
                        x:Name="SecRange" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding WeaponTypes}"
                        SelectedItem="{Binding SelectedUnit.SecWeaponType}"
                        x:Name="SecWeaponType" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding DamageTypes}"
                        SelectedItem="{Binding SelectedUnit.SecDamageType}"
                        x:Name="SecDamageType" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecAttDelay}"
                        x:Name="SecAttDelay" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.SecSkelFactor}"
                        x:Name="SecSkelFactor" />
                </StackPanel>
                <sdl:MultiSelectComboBox
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Height="25"
                    IsEditable="True"
                    ItemsSource="{Binding AttackAttr}"
                    SelectedItems="{Binding SelectedUnit.SecAttr}"
                    SelectionMode="Multiple"
                    VerticalAlignment="Bottom"
                    x:Name="SecAttr" />
            </Grid>


            <Grid
                Column="2"
                Margin="5"
                Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                <Border
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.ColumnSpan="4"
                    Margin="-5" />
                <StackPanel Grid.Column="0">
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerAttack]}" />
                    <TextBlock Height="25">
                        <Hyperlink Click="Projectile3Goto_OnClick">
                            Ter Projectile
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerAmmunition]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerTechType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerSoundType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerFireType]}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerAttack}"
                        x:Name="TerAttack" />
                    <ComboBox
                        Height="25"
                        IsEditable="True"
                        ItemsSource="{Binding ProjectileEntries}"
                        SelectedItem="{Binding SelectedUnit.TerProjectile}"
                        x:Name="TerProjectile" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerAmmunition}"
                        x:Name="TerAmmunition" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding TechTypes}"
                        SelectedItem="{Binding SelectedUnit.TerTechType}"
                        x:Name="TerTechType" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding SoundTypes}"
                        SelectedItem="{Binding SelectedUnit.TerSoundType}"
                        x:Name="TerSoundType" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerFireType}"
                        x:Name="TerFireType" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerCharge]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerRange]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerWeaponType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerDamageType]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerAttDelay]}" />
                    <TextBlock Height="25" Text="{Binding UnitUiText[TerSkelFactor]}" />
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerCharge}"
                        x:Name="TerCharge" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerRange}"
                        x:Name="TerRange" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding WeaponTypes}"
                        SelectedItem="{Binding SelectedUnit.TerWeaponType}"
                        x:Name="TerWeaponType" />
                    <ComboBox
                        Height="25"
                        ItemsSource="{Binding DamageTypes}"
                        SelectedItem="{Binding SelectedUnit.TerDamageType}"
                        x:Name="TerDamageType" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerAttDelay}"
                        x:Name="TerAttDelay" />
                    <TextBox
                        Height="25"
                        HorizontalAlignment="Stretch"
                        Text="{Binding SelectedUnit.TerSkelFactor}"
                        x:Name="TerSkelFactor" />
                </StackPanel>
                <sdl:MultiSelectComboBox
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Height="25"
                    ItemsSource="{Binding AttackAttr}"
                    SelectedItems="{Binding SelectedUnit.TerAttr}"
                    SelectionMode="Multiple"
                    VerticalAlignment="Bottom"
                    x:Name="TerAttr" />
            </Grid>


            <Grid
                Grid.Column="0"
                Margin="5"
                Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                <Border
                    BorderBrush="Black"
                    BorderThickness="1"
                    Grid.ColumnSpan="4"
                    Margin="-5" />
                <StackPanel Grid.Column="0">
                    <TextBlock Height="25" Text="{Binding UnitUiText[PriAttack]}" />
                    <TextBlock Height="25">
                        <Hyperlink Click="ProjectileGoto_OnClick">
                            Pri Projectile
                            <Hyperlink.Style>
                                <Style BasedOn="{StaticResource {x:Type Hyperlink}}" TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#000" />
                                </Style>
                            </Hyperlink.Style>
