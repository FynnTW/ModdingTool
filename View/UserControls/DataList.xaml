<UserControl x:Class="ModdingTool.View.UserControls.DataList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ModdingTool.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"></RowDefinition>
            <RowDefinition Height="965*"></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Name="DataPicker" Text="Data" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" SelectionChanged="DataPicker_SelectionChanged"/>
        <ListBox Name="DataListPicker"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" SelectionChanged="DataListPicker_SelectionChanged" FontSize="18" FontFamily="Verdana" Background="Transparent"></ListBox>
    </Grid>
</UserControl>
