<Window x:Class="ModdingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModdingTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Export JSON" HorizontalAlignment="Left" Margin="48,0,0,0" VerticalAlignment="Center" Height="78" Width="210" Click="Button_Click" FontSize="22" RenderTransformOrigin="-0.784,0.518" />
        <TextBox x:Name="ModPathInput" HorizontalAlignment="Left" Margin="155,88,0,0" TextWrapping="Wrap" Text="E:\SteamLibrary\steamapps\common\Medieval II Total War\mods\Divide_and_Conquer" VerticalAlignment="Top" Width="465" TextChanged="TextBox_TextChanged" />
        <Button x:Name="OpenViewer" Content="Button" HorizontalAlignment="Left" Margin="318,282,0,0" VerticalAlignment="Top" Height="79" Width="194" Click="openViewer_Click" Visibility="Hidden" />
        <Button Content="Import JSON" HorizontalAlignment="Left" Margin="302,0,0,0" VerticalAlignment="Center" Height="78" Width="210" Click="Import_Click" FontSize="22" RenderTransformOrigin="-0.784,0.518" />
        <Button Content="Write BMDB" HorizontalAlignment="Left" Margin="561,0,0,0" VerticalAlignment="Center" Height="78" Width="210" Click="WriteBMDB_Click" FontSize="22" RenderTransformOrigin="-0.784,0.518" />
    </Grid>
</Window>